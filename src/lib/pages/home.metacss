:header {
  layout: pt4 pb4;
}

:h1 {
  layout: pb1;
  type: h4 center;

  & {
    position: relative;
    &::after {
      content: '';
      position: absolute;
      top: 100%;
      left: 50%;
      width: 1rem;
      height: 1rem;
      border: 2px solid;
      border-top-color: transparent;
      border-left-color: transparent;
      transform: translateX(-0.5rem) rotate(45deg);
    }
  }
}

:me {
  type: h1 h2--small light;
  layout: block p1;
}
